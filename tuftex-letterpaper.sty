% adapted from tufte-common.def
\NewDocumentCommand{\tuftex@ResetPar}{}{%
  \setlength{\RaggedRightParindent}{1.0pc}%
  \setlength{\JustifyingParindent}{1.0pc}%
  \setlength{\parindent}{1pc}%
  \setlength{\parskip}{0pt}%
} %\tuftex@ResetPar
